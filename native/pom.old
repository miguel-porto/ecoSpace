<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>pt.floraon.ecospace</groupId>
		<artifactId>ecoSpace-server</artifactId>
		<version>1.0-SNAPSHOT</version>
	</parent>

	<groupId>pt.floraon.ecospace</groupId>
	<artifactId>ecoSpace-JNI</artifactId>
	<version>1.0-SNAPSHOT</version>
	<name>ecoSpace native functions</name>
	<url>http://maven.apache.org</url>

	<packaging>so</packaging>

	<dependencies>
		<dependency>
			<groupId>pt.floraon.ecospace</groupId>
			<artifactId>ecoSpace-server-java</artifactId>
			<version>1.0-SNAPSHOT</version>
			<type>jar</type>
			<scope>compile</scope>
		</dependency>  
	</dependencies>

	<build>
		<plugins>
			<plugin>
				<artifactId>maven-compiler-plugin</artifactId>
				<configuration>
				<source>1.8</source>
				<target>1.8</target>
				</configuration>
			</plugin>    

		<plugin>
			<groupId>org.codehaus.mojo</groupId>
			<artifactId>native-maven-plugin</artifactId>
			<version>1.0-alpha-8</version>
			<extensions>true</extensions>
			<configuration>
			<!--  trigger javah -->          
				<javahOS>hp-ux</javahOS>

				<compilerProvider>generic-classic</compilerProvider>
				<compilerExecutable>cc</compilerExecutable>

				<linkerExecutable>cc</linkerExecutable>
				<sources>
					<source>
						<directory>./src/main/native</directory>
						<fileNames>
							<fileName>extract-vars.c</fileName>
							<fileName>distancequery.c</fileName>
							<fileName>distances.c</fileName>
							<fileName>readtiffs.c</fileName>
							<fileName>kernel-dens.c</fileName>
							<fileName>build-kernel.c</fileName>
						</fileNames>
					</source>
				</sources>
				

				<compilerStartOptions>
					<compilerStartOption>-I/usr/lib/jvm/java-8-openjdk-amd64/include -I/usr/lib/jvm/java-8-openjdk-amd64/include/linux</compilerStartOption>
				</compilerStartOptions>

                <linkerStartOptions>
                    <linkerStartOption>-shared</linkerStartOption>
                    <linkerStartOption>-fopenmp</linkerStartOption>
                    <linkerStartOption>-O3</linkerStartOption>
                    <linkerStartOption>-I/usr/lib/jvm/java-7-openjdk-amd64/include</linkerStartOption>
                    <linkerStartOption>-I${basedir}/src/main/native/</linkerStartOption>
                    <linkerStartOption>-B ${basedir}/src/main/native/tiff-4.0.3/libtiff/.libs</linkerStartOption>
                </linkerStartOptions>
                <linkerEndOptions>
                    <linkerEndOption>-lc</linkerEndOption>
                    <linkerEndOption>-ltiff</linkerEndOption>
                </linkerEndOptions>
<!--


				<linkerStartOptions>
					<linkerStartOption>-fPIC -fopenmp -O3 -shared</linkerStartOption>
					<linkerStartOption>-B ${basedir}/src/main/native/tiff-4.0.3/libtiff/.libs</linkerStartOption>
				</linkerStartOptions>
				<linkerEndOptions>
					<linkerEndOption>-lc -lm -ltiff</linkerEndOption>
				</linkerEndOptions>-->
			</configuration>

			<executions>
				<execution>
					<id>javah</id>
					<phase>generate-sources</phase>
					<configuration>
						<javahOS>hp-ux</javahOS>
						<javahProvider>default</javahProvider>
						<javahOutputDirectory>${project.build.directory}/custom-javah</javahOutputDirectory>
						<workingDirectory>${basedir}</workingDirectory>
						<javahOutputFileName>nativeStuff.h</javahOutputFileName>
						<javahClassNames>
							<javahClassName>pt.floraon.ecospace.nativeFunctions</javahClassName>
						</javahClassNames>
					</configuration>
					<goals>
					<goal>javah</goal>
					</goals>
				</execution>
			</executions>
			</plugin>
		</plugins>
	</build>
</project>
